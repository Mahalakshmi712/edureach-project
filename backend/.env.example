# EduReach Backend Environment Variables
# Copy this file to .env and fill in your values

# Application
FLASK_APP=app.main
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True

# Server
HOST=0.0.0.0
PORT=5000

# Database - MongoDB
MONGODB_URI=mongodb://localhost:27017/edureach
MONGODB_DB_NAME=edureach

# Database - PostgreSQL (alternative)
# DATABASE_URL=postgresql://user:password@localhost:5432/edureach

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=86400  # 24 hours in seconds

# File Storage
UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=52428800  # 50 MB in bytes
ALLOWED_EXTENSIONS=pdf,doc,docx,ppt,pptx,mp4,webm,jpg,jpeg,png,gif

# AWS S3 (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=edureach-media
AWS_REGION=us-east-1

# Jitsi Server
JITSI_DOMAIN=meet.jit.si
JITSI_APP_ID=
JITSI_APP_SECRET=

# AI Services
OPENAI_API_KEY=  # Optional, for enhanced AI features
GOOGLE_TRANSLATE_API_KEY=  # Optional, uses free service by default

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@edureach.com

# Redis (for caching and queues)
REDIS_URL=redis://localhost:6379/0

# Celery (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Cors Origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/edureach.log

# Rate Limiting
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT=100 per hour

# Video Processing
VIDEO_COMPRESSION_QUALITY=23  # Lower is better quality (18-28 range)
VIDEO_MAX_RESOLUTION=720p

# Security
BCRYPT_LOG_ROUNDS=12
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Monitoring
SENTRY_DSN=  # Optional, for error tracking
